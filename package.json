{
  "name": "react-esbuild-template",
  "version": "1.0.0",
  "description": "Opinionated React Template powered by ESBuild.",
  "main": "src/index.tsx",
  "scripts": {
    "build": "pnpm build:esb && pnpm build:tw",
    "watch:esb": "node esbuild.config.js",
    "build:esb": "esbuild src/index.tsx --bundle --minify --outfile=public/dist/bundle.js --loader:.png=file --loader:.svg=file --loader:.jpg=file --public-path=dist",
    "start": "lite-server",
    "lint": "eslint src/**/*.{ts,tsx}",
    "test": "jest",
    "watch:tw": "tailwindcss -i ./src/index.css -o ./public/dist/tailwind.css --watch",
    "build:tw": "tailwindcss -i ./src/index.css -o ./public/dist/tailwind.css --minify",
    "format": "prettier --write .",
    "purge": "node scripts/purgeDist.js ./public/dist",
    "dev": "concurrently --kill-others \"pnpm watch:esb\" \"pnpm watch:tw\" \"pnpm start\"",
    "test:e2e": "playwright test",
    "report:e2e": "playwright show-report",
    "ci": "pnpm install --frozen-lockfile"
  },
  "keywords": [
    "react",
    "esbuild",
    "eslint",
    "jest",
    "typescript",
    "tailwindcss",
    "framer-motion",
    "github-workflows",
    "i18next",
    "prettier",
    "zod",
    "react-icons",
    "playwright"
  ],
  "author": "shaun",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.29.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/react-router-dom": "^5.3.3",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "esbuild": "^0.16.17",
    "esbuild-plugin-inline-image": "^0.0.9",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^27.0.1",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lite-server": "^2.6.1",
    "prettier": "^2.8.2",
    "react-test-renderer": "^18.2.0",
    "tailwindcss": "^3.2.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "framer-motion": "^8.4.3",
    "i18next": "^22.4.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.1.4",
    "react-icons": "^4.7.1",
    "react-router-dom": "^6.6.2",
    "zod": "^3.20.2"
  }
}
