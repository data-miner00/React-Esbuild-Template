{
  "name": "react-esbuild-template",
  "version": "1.0.0",
  "description": "Opinionated React Template powered by ESBuild.",
  "main": "src/index.tsx",
  "scripts": {
    "build": "pnpm build:esb && pnpm build:tw",
    "watch:esb": "node esbuild.config.js",
    "build:esb": "node esbuild.prod.config.js",
    "start": "lite-server",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "test": "jest",
    "watch:tw": "tailwindcss -i ./src/index.css -o ./public/dist/tailwind.css --watch",
    "build:tw": "tailwindcss -i ./src/index.css -o ./public/dist/tailwind.css --minify",
    "format": "prettier --write .",
    "purge": "node scripts/purgeDist.js ./public/dist",
    "dev": "concurrently --kill-others \"pnpm watch:esb\" \"pnpm watch:tw\" \"pnpm start\""
  },
  "keywords": [
    "react",
    "esbuild",
    "eslint",
    "jest",
    "typescript",
    "tailwindcss",
    "framer-motion",
    "github-workflows",
    "i18next",
    "prettier",
    "zod",
    "react-icons"
  ],
  "author": "shaun",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.19",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/react-router-dom": "^5.3.3",
    "@types/testing-library__jest-dom": "^5.14.6",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "chalk": "^4.1.2",
    "concurrently": "^7.6.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.15.18",
    "esbuild-plugin-inline-image": "^0.0.8",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lite-server": "^2.6.1",
    "prettier": "^2.8.8",
    "react-test-renderer": "^18.2.0",
    "tailwindcss": "^3.3.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@uidotdev/usehooks": "^2.0.1",
    "framer-motion": "^7.10.3",
    "i18next": "^22.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.3.1",
    "react-icons": "^4.10.1",
    "react-router-dom": "^6.14.1",
    "web-vitals": "^3.4.0",
    "zod": "^3.21.4"
  }
}
